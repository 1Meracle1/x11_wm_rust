    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach",
            "program": "${workspaceFolder}/target/debug/window_manager",
            "pid": "${command:pickMyProcess}",
            "sourceLanguages": ["rust"]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo launch testbed_window",
            "cargo": {
                "args": [
                    "build",
                    "-p",
                    "testbed_window"
                ]
            },
            "args": ["floating", "X11 floating window"]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'window_manager'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=window_manager",
                    "--package=window_manager"
                ],
                "filter": {
                    "name": "window_manager",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'x11_wm'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=x11_wm",
                    "--package=x11_wm"
                ],
                "filter": {
                    "name": "x11_wm",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}